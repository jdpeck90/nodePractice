extends layout

block content
  if posts
   each post, i in posts
    .post 
     h1 
      a(href='/posts/show/#{post._id}')
       =post.title
      p.meta Posted in #{post.category} by #{post.author} on #{moment(post.data).format("MM-DD-YYYY")}
      =post.body    
      a.more(href='/posts/show/#{post_ids}') Read More
      

